  display: inline-block;
  width: 20px;
  height: 20px;
  margin-left: 8px;
  border: 3px solid #6b7280;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

.error {
  padding: 32px;
  text-align: center;
  color: var(--bad);
}

.no-data {
  padding: 32px;
  text-align: center;
  color: var(--muted);
}

