}

.ai-project-title {
  color: #9a7cff;
  font-size: 1.4em;
  margin-top: 0;
  border-bottom: 1px solid #1a2133;
  padding-bottom: 8px;
}

.ai-project-features {
  background: #0f1422;
  border-left: 3px solid #6ee7ff;
  padding: 12px;
  margin: 12px 0;
}

.ai-project-highlights {
  background: #0f1422;
  border-left: 3px solid #9a7cff;
