/* AI Assistant */
.sidebar-panel {
  display: none;
  background: var(--panel);
  border-bottom: 1px solid #1f2434;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border-bottom: 1px solid #1f2434;
}

.panel-close {
  background: none;
  border: none;
  color: var(--muted);
  font-size: 20px;
  cursor: pointer;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.panel-close:hover {
  background: #111624;
  color: var(--text);
}

.ai-chat {
  display: flex;
  flex-direction: column;
  height: 300px;
}

.ai-messages {
  flex: 1;
  overflow-y: auto;
  padding: 12px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.message {
  max-width: 80%;
  padding: 12px;
  border-radius: 12px;
  position: relative;
}

.message-user {
  align-self: flex-end;
  background: #1b2130;
  border: 1px solid #2a3147;
}

.message-assistant {
  align-self: flex-start;
  background: #0b0f18;
  border: 1px solid #1a2133;
}

.message.thinking .message-content::after {
  content: '';
  display: inline-block;
  width: 12px;
