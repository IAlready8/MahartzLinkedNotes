  }
  
  .export-options {
    grid-template-columns: 1fr;
  }
  
  .workspace-stats {
    grid-template-columns: 1fr 1fr;
  }
  
  .analytics-sections {
    grid-template-columns: 1fr;
  }
  
  .theme-options {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .app {
    grid-template-columns: 1fr;
    grid-template-rows: auto auto 1fr auto;
    grid-template-areas:
      "top"
      "left"
      "main"
      "right";
  }
  
  .topbar {
    flex-wrap: wrap;
  }
  
  .workspace-selector {
    order: -1;
    margin: 8px 0;
  }
  
  .theme-options {
    grid-template-columns: 1fr;
  }
  
  .workspace-stats {
    grid-template-columns: 1fr;
  }
}



