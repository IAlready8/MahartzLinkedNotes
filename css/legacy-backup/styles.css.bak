  border: 1px solid #2a3147;
  color: #d7def0;
  padding: 8px 12px;
  cursor: pointer;
  font-family: inherit;
  border-radius: 6px;
  width: 100%;
  transition: all 0.2s ease;
}

.project-btn:hover {
  background: #2a3147;
