}

.graph-view.active {
  display: block;
}

.graph-canvas {
  width: 100%;
  height: 100%;
}

.metrics-detail {
  padding: 16px;
}

.metric-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
  margin-bottom: 24px;
}

.metric-card {
  background: #0b0f18;
  border: 1px solid #1a2133;
